	<bean id="otmmaddonui.assetAssignmentSessionContext" class="com.opentext.hybris.otmmconnector.ui.assetassignment.generic.impl.AssetAssignmentSessionContext" scope="session"/>

	<bean id="otmmaddonui.cmscockpitOtmmSessionHolder" class="com.opentext.hybris.otmmconnector.ui.generic.impl.UiOtmmSessionHolder" scope="session">
		<property name="settings" ref="otmmaddon.assetAssignmentUiSettings"/>
		<property name="riaService" ref="otmmRiaService2"/>
	</bean>

	<bean id="otmmaddonui.openAssetInspectorHelper" class="com.opentext.hybris.otmmconnector.ui.assetassignment.cockpit.editors.OpenAssetInspectorHelper">
		<property name="uiHelperService" ref="otmmaddon.uiHelperService"/>
		<property name="settings" ref="otmmaddon.assetAssignmentUiSettings"/>
		<property name="exceptionHandler" ref="otmmaddonui.cockpitExceptionHandler"/>

		<lookup-method name="getOtmmSessionHolder" bean="otmmaddonui.cmscockpitOtmmSessionHolder"/>
	</bean>

</beans>